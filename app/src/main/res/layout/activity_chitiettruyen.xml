<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAnhbia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dragonballz" />




        <LinearLayout
            android:layout_weight="0.35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTentruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyệt đạo di giới (bị thần vứt bỏ)"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>




            </HorizontalScrollView>
            <TextView
                android:id="@+id/tvTinhtrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tình trạng:"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            <TextView
                android:id="@+id/tvLuotxem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượt xem:"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            <TextView
                android:id="@+id/tvLuottheodoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượt theo dõi:"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            <TextView
                android:id="@+id/tvXephang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xếp hạng: 4.5/5"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:drawableEnd="@drawable/baseline_star_24"
                />

            <TextView
                android:id="@+id/tvTheodoitruyen"
                android:layout_width="120dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content"
                android:text="Theo dõi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_heart_broken_24"
                android:background="@drawable/btntheodoi"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />
            <TextView
                android:id="@+id/tvHuytheodoitruyen"
                android:layout_width="140dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content"
                android:text="Hủy theo dõi"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_close_24"
                android:background="@drawable/btntheodoi"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                />



        </LinearLayout>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F0F0F0"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
       >

        <TextView
            android:id="@+id/tvchitiet"

            android:gravity="center"
            android:text="Chi tiết"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvchapter"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Chapter"

            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <!-- Các thành phần khác trong LinearLayout -->

    </LinearLayout>

    <ScrollView
        android:id="@+id/Layoutcttruyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>


</LinearLayout>

